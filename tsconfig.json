{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js", "app/layout.jsx", "app/page.jsx", "app/blog/[slug]/page.jsx", "app/blog/page.jsx", "app/contact/page.jsx", "app/projects/page.jsx", "components/ui/accordion.jsx", "components/ui/alert-dialog.jsx", "components/ui/alert.jsx", "components/ui/aspect-ratio.jsx", "components/ui/avatar.jsx", "components/ui/badge.jsx", "components/ui/breadcrumb.jsx", "components/ui/button.jsx", "components/ui/calendar.jsx", "components/theme-provider.jsx", "components/navigation.jsx", "components/ui/card.jsx", "components/ui/carousel.jsx"],
  "exclude": ["node_modules"]
}
